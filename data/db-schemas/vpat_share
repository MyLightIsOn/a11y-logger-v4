create table public.vpat_share (
  id uuid not null default gen_random_uuid (),
  version_id uuid not null,
  visibility public.share_visibility not null default 'private'::share_visibility,
  password_hash text null,
  show_issue_links boolean not null default true,
  created_at timestamp with time zone not null default now(),
  revoked_at timestamp with time zone null,
  constraint vpat_share_pkey primary key (id),
  constraint vpat_share_version_id_fkey foreign KEY (version_id) references vpat_version (id) on delete CASCADE
) TABLESPACE pg_default;

create index IF not exists vpat_share_version_idx on public.vpat_share using btree (version_id) TABLESPACE pg_default;

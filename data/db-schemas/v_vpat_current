create or replace view public.v_vpat_current as
select
  v.id as vpat_id,
  v.project_id,
  v.title,
  v.status,
  v.created_by,
  v.created_at,
  v.updated_at,
  v.current_version_id,
  vv.version_number,
  vv.published_at,
  vv.published_by
from public.vpat v
left join public.vpat_version vv on vv.id = v.current_version_id;
